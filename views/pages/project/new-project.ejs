<%- include('../../partials/header') -%>
<%- include('../../partials/top-bar') -%>
<%- include('../../partials/sidebar') -%>

<div class="main-content">

    <div class="page-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="page-title mb-0 font-size-18">Create New Project</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Projects</a></li>
                            <li class="breadcrumb-item active">New Project</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <!-- <h4 class="card-title mb-4">Create New Project</h4> -->
                        <form class="outer-repeater" method="post" action="/new-project">
                            <div data-repeater-list="outer-group" class="outer">
                                <div data-repeater-item class="outer">
                                    <div class="form-group row mb-4">
                                        <label for="projectname" class="col-form-label col-lg-2">Project Name</label>
                                        <div class="col-lg-10">
                                            <input id="projectname" name="projectname" type="text"
                                                class="form-control" placeholder="Enter Project Name..." required>
                                        </div>
                                    </div>

                                    <div class="form-group row mb-4">
                                        <label for="projectname" class="col-form-label col-lg-2">Project Location</label>
                                        <div class="col-lg-10">
                                            <input id="projectlocation" name="location" type="text"
                                                class="form-control" placeholder="Enter Project Location..." required>
                                        </div>
                                    </div>

                                    <div class="form-group row mb-4">
                                        <label class="col-form-label col-lg-2">Project Description</label>
                                        <div class="col-lg-10">
                                            <textarea id="taskdesc-editor" name="description"></textarea>
                                        </div>
                                    </div>

                                    <!-- <div class="form-group row mb-4">
                                        <label class="col-form-label col-lg-2">Project Date</label>
                                        <div class="col-lg-10">
                                            <div class="input-daterange input-group" data-provide="datepicker">
                                                <input type="text" class="form-control" placeholder="Start Date"
                                                    name="start" />
                                                <input type="text" class="form-control" placeholder="End Date"
                                                    name="end" />
                                            </div>
                                        </div>
                                    </div> -->

                                    <div class="inner-repeater mb-4">
                                        <div data-repeater-list="inner-group" class="inner form-group mb-0 row">
                                            <label class="col-form-label col-lg-2">Add Project Documents</label>
                                            <div data-repeater-item class="inner col-lg-10 ms-md-auto">
                                                <div class="mb-3 row align-items-center">
                                                    <div class="col-md-6">
                                                        <input type="text" class="inner form-control"
                                                            placeholder="Document Title..." name="title">
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="mt-4 mt-md-0">
                                                            <input class="form-control" type="file" name="doc">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="mt-2 mt-md-0 d-grid">
                                                            <input data-repeater-delete type="button"
                                                                class="btn btn-primary inner" value="Delete" />
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-end">
                                            <div class="col-lg-10">
                                                <input data-repeater-create type="button"
                                                    class="btn btn-success inner" value="Add Document" name="project_docs">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row mb-4">
                                        <label for="projectbudget" class="col-form-label col-lg-2">Budget</label>
                                        <div class="col-lg-10">
                                            <input id="projectbudget" name="project_budget" type="text"
                                                placeholder="Enter Project Budget..." class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row justify-content-end">
                            <div class="col-lg-10">
                                <button type="submit" class="btn btn-primary">Create Project</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div>
    <!-- End Page-content -->

    <%- include('../../partials/foot') -%>

</div>
<!-- end main content-->

<%- include('../../partials/footer') -%>
